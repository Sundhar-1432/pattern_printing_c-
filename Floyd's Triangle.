#include <iostream>
using namespace std;

void pattern(int n){
    int k=1;
    for(int i=0;i<=n;i++){
        for(int j=1;j<=i;j++){
            cout<<k<<" ";
            k++;
        }
        cout<<endl;
    }
}
int main() {
    int n;
    cout<<"enter your rows:";
    cin>>n;
    pattern(n);
    return 0;
}
