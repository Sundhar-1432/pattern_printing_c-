#include <iostream>
using namespace std;

void pattern(int n){
    char k='A';
    for(int i=0;i<=n;i++){
        for(char j=0;j<=i;j++){
            cout<<k<<" ";
        }
        k++;
        cout<<endl;
    }
}
int main() {
    int n;
    cout<<"enter your rows:";
    cin>>n;
    pattern(n);
    return 0;
}
